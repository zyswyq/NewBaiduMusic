<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_mainpopbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_mainpop"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/Blue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/king"
            android:orientation="horizontal">
            <ImageView
                style="@style/maintabimg"
                android:src="@mipmap/bt_playpage_button_like_normal_new"/>
            <ImageView
                style="@style/maintabimg"
                android:src="@mipmap/bt_playpage_button_download_normal_new"/>
            <ImageView
                style="@style/maintabimg"
                android:src="@mipmap/bt_playpage_button_share_normal_new"/>
            <ImageView
                style="@style/maintabimg"
                android:src="@mipmap/bt_playpage_button_comment_normal"/>
            <ImageView
                style="@style/maintabimg"
                android:src="@mipmap/bt_playpage_moreactions_normal_new"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumb="@mipmap/bt_playpage_button_progress_normal"
                android:progress="50"
                android:progressDrawable="@drawable/progressbar_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_mainpopback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_mainpop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>